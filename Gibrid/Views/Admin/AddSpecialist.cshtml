@model SpecialistViewModel
<div class="row">
	<div class="col-lg-12">

		<h3>Добавление записи</h3>
		<form asp-controller="Admin" asp-action="AddSpecialist" asp-route-specialist="@Model" method="post" class="form-horizontal" enctype="multipart/form-data">
			<div class="form-group">
				<label asp-for=Name></label>
				<div class="col-md-5">
					<input asp-for=Name class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<label asp-for=SurName></label>
				<div class="col-md-5">
					<input asp-for=SurName class="form-control" />
					<span asp-validation-for="SurName" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<label asp-for=FullName></label>
				<div class="col-md-5">
					<input asp-for=FullName class="form-control" />
					<span asp-validation-for="FullName" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<label asp-for=Phone></label>
				<div class="col-md-5">
					<input asp-for=Phone class="form-control" />
					<span asp-validation-for="Phone" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<label asp-for=Experience></label>
				<div class="col-md-5">
					<input asp-for=Experience class="form-control" />
					<span asp-validation-for="Experience" class="text-danger"></span>
				</div>
			</div>

			<div class="form-group">
				<label asp-for=Category></label>
				@Html.DropDownList("Category", new MultiSelectList(new string[] { "Ученик", "Профессионал", "Мастер высшей категории"}))
				@*@Html.DropDownList("Сategory", Html.GetEnumSelectList(typeof(EnumCategorySpecialist)))*@
				<br />
			</div>
			<div class="form-group">
				<label asp-for=UserName></label>
				@{
					var masters = UserManager.GetUsersInRoleAsync("master").Result.ToList();
					var count = UserManager.GetUsersInRoleAsync("master").Result.ToList().Count();
					var list = new List<string>();
				}
				@foreach (var m in masters){
					list.Add(m.UserName);
				}
				@Html.DropDownList("UserName", new MultiSelectList(list))
				<br />
			</div>
			<div class="custom-file">
				<input asp-for=Avatar type="file" class="custom-file-input" id="inputGroupFile01"
					   aria-describedby="inputGroupFileAddon01">
				<label asp-for=Avatar class="custom-file-label" for="inputGroupFile01">Выбрать файл</label>
			</div>
			<input class="btn btn-success" type="submit" value="Добавить" />
		</form>
	</div>
</div>
