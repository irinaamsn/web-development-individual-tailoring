@model IEnumerable<Works>
<h2>Работы</h2>
<div class="row mt-5 mb-2">
    @{
        if(Model.Count() >0)
        {
            foreach (Works work in Model)
            {          
                <div class="col-md-4">
                    <img class="img-thumbnail" style=" border-style: none; " src="data:image/jpeg;base64,@(Convert.ToBase64String(work.Image))" alt="" />              
                </div>
            }
        }
    }
</div>